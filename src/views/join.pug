extends index

block content
    h2.text-center JOIN!
    form(method="POST", name="joinForm", action="/join")
        div.mb-3
            label.form-label(for="username") ID
            input.form-control(id="username", type="text", name="username", placeholder="id")
        div.mb-3
            label.form-label(for="password") Password
            input.form-control(id="password", type="password", name="password", placeholder="password")
        input.btn.btn-primary.w-100(type="submit", value="JOIN!")
